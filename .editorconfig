root = true

[*.py]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.sh]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.json]
indent_style = tab
charset = utf-8

[*.js]
indent_style = tab
charset = utf-8

[Dockerfile]
indent_style = spaces
indent_size = 4
charset = utf-8


[*.{yml,yaml}]
indent_style = spaces
indent_size = 2
charset = utf-8
